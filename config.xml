<?xml version='1.0' encoding='utf-8'?>
<widget id="com.ls-sys.dicerosmovil" version="0.9.11" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>DicerosMovil</name>
    <description>
        Diceros ERP, version movil.
    </description>
    <author href="http://ls-sys.com" email="gs@ls-sy.com">ls-sys</author>
    <content src="index.html" />
    <preference name="phonegap-version" value="cli-6.5.0" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <preference name="android-minSdkVersion" value="14" />
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <preference name="BackupWebStorage" value="none" />
    </platform>
    <preference name="DisallowOverscroll" value="true" />
	<preference name="BackgroundColor" value="0xE4F1FB" />
	
	<preference name="android-build-tool" value="gradle" />
	<preference name="ios-statusbarstyle" value="black-opaque" />
	<preference name="KeyboardShrinksView" value="true" />
	
    <plugin name="cordova-plugin-console" spec="1.0.7" />
    <plugin name="cordova-plugin-statusbar" spec="1.0.1" />
    <plugin name="cordova-plugin-whitelist" spec="1.2.2" />
	<plugin name="cordova-plugin-camera" spec="~4.0.3" />
    <icon src="icon.png"/>
</widget>
