<?xml version='1.0' encoding='utf-8'?>
<widget id="com.lssys.dicerosmovil" version="0.9.14" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <feature name="Camera">
        <param name="browser-package" value="Camera" />
    </feature>
    <feature name="Device">
        <param name="browser-package" value="Device" />
    </feature>
    <feature name="CordovaHttpPlugin">
        <param name="browser-package" value="CordovaHttpPlugin" />
    </feature>
    <name>DicerosMovil</name>
    <description>
        Diceros ERP, version movil.
    </description>
    <author email="gs@ls-sy.com" href="http://ls-sys.com">ls-sys</author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <gap:config-file parent="/manifest" platform="android">
        <application android:hardwareAccelerated="true" />
        <supports-screens android:largeScreens="true" android:smallScreens="true" android:xlargeScreens="true" />
        <application android:theme="@style/Theme.Default" />
    </gap:config-file>
    <gap:config-file mode="delete" parent="/manifest" platform="android">
        <uses-permission android:name="android.permission.RECORD_AUDIO" />
        <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
        <uses-permission android:name="android.permission.READ_CONTACTS" />
        <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    </gap:config-file>
    <gap:config-file parent="/manifest/application" platform="android">
        <activity android:launchMode="singleTask" />
    </gap:config-file>
    <preference name="phonegap-version" value="cli-8.0.0" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="StatusBarOverlaysWebView" value="false" />
    <preference name="StatusBarBackgroundColor" value="#0267b9" />
    <preference name="StatusBarStyle" value="blackopaque" />
    <preference name="BackgroundColor" value="#E4F1FB" />
    <preference name="android-build-tool" value="gradle" />
    <preference name="KeyboardShrinksView" value="true" />
</widget>
